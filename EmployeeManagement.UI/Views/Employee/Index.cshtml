@model IEnumerable<EmployeeViewModel>

<h3 class="display-4"><b>EMPLOYEES</b></h3>
<button class="btn btn-success" data-toggle="modal" data-target="#createinsertform"> Create New Employee</button><br>


<div class="modal fade" id="createinsertform" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" ><b>EMPLOYEE DETAILS</b></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="createform">
                    <label><b>NAME:</b></label><br>
                    <input type="text" style="width:100%" id="name" required name="name" placeholder="Enter a Name" pattern="[A-Za-z\s\.]"><br><br>
                    <label><b>DEPARTMENT:</b></label><br>
                    <select style="width:100%" name="Department" required id="department">
                        <option>--Choose An Option--</option>
                        <option value="CEO">CEO</option>
                        <option value="Asst.CEO">Asst.CEO</option>
                        <option value="MANAGER">MANAGER</option>
                        <option value="HR">HR</option>
                        <option value="DEVELOPING">DEVELOPING</option>
                        <option value="TESTING">TESTING</option>
                    </select>
                    <br />
                    <br />
                    <label><b>AGE:</b></label><br>
                    <input type="number" style="width:100%" id="age" required name="age" placeholder="Enter the Age" min="1" max="100"><br><br>
                    <label><b>ADDRESS:</b></label><br>
                    <input type="text" style="width:100%" id="address" required name="address" placeholder="Enter the Address"><br><br><br>
                    <input type="submit" value="CREATE" class="btn btn-outline-success">
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="createupdateform" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><b>SUBMIT UPDATED EMPLOYEE DETAILS</b></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="updateform">
                    <label><b>ID:</b></label><br>
                    <input type="number" style="width:100%" id="employeeId" required disabled name="id"><br><br>
                    <label><b>NAME:</b></label><br>
                    <input type="text" style="width:100%" id="employeeName" required name="name" pattern="[A-Za-z\s\.]"><br><br>
                    <label><b>DEPARTMENT:</b></label><br>
                    <select style="width:100%" id="employeeDept" required name="Department" min="">
                        <option>--Choose An Option--</option>
                        <option value="CEO">CEO</option>
                        <option value="Asst.CEO">Asst.CEO</option>
                        <option value="MANAGER">MANAGER</option>
                        <option value="HR">HR</option>
                        <option value="DEVELOPING">DEVELOPING</option>
                        <option value="TESTING">TESTING</option>
                    </select>
                    <br />
                    <br />
                    <label><b>AGE:</b></label><br>
                    <input type="number" style="width:100%" id="employeeAge" required name="age" min="1" max="100"><br><br>
                    <label><b>ADDRESS:</b></label><br>
                    <input type="text" style="width:100%" id="employeeAddress" required name="address"><br><br><br>
                    <input type="submit" value="UPDATE" class="btn btn-outline-success">
                </form>
            </div>
        </div>
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>
                <b>Id</b>
            </td>
            <td>
                <b>Name</b>
            </td>
            <td>
                <b>Department</b>
            </td>
            <td>
            </td>
        </tr>

    </thead>
    @foreach (var employee in Model)
    {
<tr>
    <td>@employee.Id</td>
    <td>@employee.Name</td>
    <td>@employee.Department</td>
    <td>
        <button class="btn btn-primary employeeDetails" data-id="@employee.Id"> Details</button>
        <button class="btn btn-info employeeEdit" data-toggle="modal" data-target="#createupdateform" data-id="@employee.Id"> Edit</button>
        <button class="btn btn-danger employeeDelete" data-id="@employee.Id"> Delete</button>
    </td>
</tr>}
</table>

<div id="EmployeeCard"> </div>

@section Scripts{
    <script src="~/js/employee.js"></script>
}
