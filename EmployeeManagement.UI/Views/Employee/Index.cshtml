@model IEnumerable<EmployeeViewModel>

<h3 class="display-4">Employees</h3>
<button class="btn btn-success" data-toggle="modal" data-target="#myModal"> Create New Employee</button>


<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
 @*Modal content*@
<div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Employee Details</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="createform">
                    <label>NAME:</label><br>
                    <input type="text" style="width:100%" id="name" name="name" placeholder="Enter a Name"><br>
                    <label>DEPARTMENT:</label><br>
                    <input type="text" style="width:100%" id="department" name="department" placeholder="Enter the Department"><br>
                    <label>AGE:</label><br>
                    <input type="number" style="width:100%" id="age" name="age" placeholder="Enter the Age"><br>
                    <label>ADDRESS:</label><br>
                    <input type="text" style="width:100%" id="address" name="address" placeholder="Enter the Address"><br><br><br>
                    <input type="submit" value="create">
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="myModalw" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Employee Details</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="updateform">
                    <label>Id:</label><br>
                    <input type="number" style="width:100%" id="empId" name="id"><br>
                    <label>Name:</label><br>
                    <input type="text" style="width:100%" id="empName" name="name"><br>
                    <label>Department:</label><br>
                    <input type="text" style="width:100%" id="empDept" name="department"><br>
                    <label>Age:</label><br>
                    <input type="number" style="width:100%" id="empAge" name="age"><br>
                    <label>Address:</label><br>
                    <input type="text" style="width:100%" id="empAddress" name="address"><br><br><br>
                    <input type="submit" value="update">
                </form>
            </div>
        </div>
    </div>
</div>

